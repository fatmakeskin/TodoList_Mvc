
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title> ToDo Liste Hoşgeldiniz | Giriş Yap </title>
    <link href="~/web/giris/style.css" rel="stylesheet" type="text/css">
    <meta charset="utf-8">
</head>
<body>
    <div class="giris">
        <h2>GİRİŞ YAP</h2>
        @using (Html.BeginForm("Login", "Guvenlik", FormMethod.Post))
        {
            <div class="pc">
                <input type="text" required="required" name="MAIL">
                <span> Mail Adresiniz</span>
            </div>
            <div class="pc">
                <input type="password" required="required" name="SIFRE">
                <span>Şifreniz</span>
            </div>            
            <button type="submit">Giriş Yap</button>
            
        }
        <a href="/Guvenlik/SignIn/">Kayıt Olmak İçin <span>Buraya Tıklayınız</span></a>

    </div>
</body>
</html>

