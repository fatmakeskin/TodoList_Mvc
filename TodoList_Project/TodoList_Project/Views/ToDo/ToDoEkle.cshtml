@model TodoList_Project.Models.Entity.Tbl_ToDo
@{
    ViewBag.Title = "ToDoEkle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>ToDo Ekle</h2>

<form style="margin-top:15px;" form-group" method="post">

    <div style="margin-top:15px">
        <label> Başlık</label>
        @Html.TextBoxFor(k => k.BASLIK, new { @class = "form-control" })
    </div>    
    <div style="margin-top:15px">
        <label> Notlar</label>
        @Html.TextBoxFor(k => k.NOTLAR, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label> Tarih</label>
        @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control" })
    </div>    
    <div style="margin-top:15px">
        <label> Kategori</label>
        @Html.DropDownListFor(k => k.Tbl_Kategori.AD, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info"> Ekle</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
</form>

